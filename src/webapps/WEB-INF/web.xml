<?xml version="1.0" encoding="ISO-8859-1"?>  
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">
	<servlet>  
		<servlet-name>ControllerServlet</servlet-name>  
		<servlet-class>jsp.learning.servlets.RegistrationServlet</servlet-class>  
	</servlet>  
	<servlet-mapping>  
		<servlet-name>ControllerServlet</servlet-name>  
		<url-pattern>/ControllerServlet</url-pattern>  
	</servlet-mapping>
	<servlet>  
		<servlet-name>UpdateHelperServlet</servlet-name>  
		<servlet-class>jsp.learning.servlets.UpdateHelperServlet</servlet-class>  
	</servlet>  
	<servlet-mapping>  
		<servlet-name>UpdateHelperServlet</servlet-name>  
		<url-pattern>/UpdateHelperServlet</url-pattern>  
	</servlet-mapping>
</web-app>
